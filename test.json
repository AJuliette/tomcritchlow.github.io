---
---
[{% for post in site.posts | limit :3 %}{
  "post":{{post.title | jsonify}},
  "url": {{post.url | jsonify}},
  "blocks":[
  {% assign newlines = post.content | newline_to_br %}
  {% assign once = newlines | newline_to_br %}
  {% assign paragraphs = once | newline_to_br | split: '<br /><br /><br />' %}
  {% for paragraph in paragraphs %}
  {{paragraph}}{% unless forloop.last %},{% endunless %}{% endfor %}
  ]
}{% unless forloop.last %},{% endunless %}{% endfor %}]


